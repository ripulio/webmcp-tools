{
  "name": "@ripulio/webmcp-tools",
  "version": "0.0.1",
  "private": true,
  "description": "A collection of WebMCP tools",
  "homepage": "https://github.com/ripulio/webmcp-tools#readme",
  "files": [
    "lib",
    "!lib/**/*.test.js"
  ],
  "bugs": {
    "url": "https://github.com/ripulio/webmcp-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ripulio/webmcp-tools.git"
  },
  "license": "MIT",
  "author": "James Garbutt (https://github.com/43081j)",
  "type": "module",
  "main": "lib/main.js",
  "scripts": {
    "clean": "premove lib",
    "build": "npm run clean && tsgo && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.ts",
    "build:noclean": "tsgo",
    "test": "vitest run",
    "lint": "npm run lint:format && npm run lint:js && npm run lint:meta && npm run lint:script-types",
    "format": "prettier --write src",
    "lint:script-types": "tsc -p tsconfig.scripts.json",
    "lint:format": "prettier --check src",
    "lint:js": "eslint src",
    "lint:meta": "node --experimental-strip-types scripts/lint-meta.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@typescript/native-preview": "^7.0.0-dev.20260120.1",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "ajv": "^8.17.1",
    "cloudflare": "^5.2.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "playwright": "^1.57.0",
    "premove": "^4.0.0",
    "prettier": "^3.8.0",
    "tinyglobby": "^0.2.15",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "webmcp-polyfill": "^0.0.2"
  }
}
