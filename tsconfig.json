{
  "compilerOptions": {
    "target": "es2022",
    "module": "node18",
    "moduleResolution": "node16",
    "outDir": "./lib",
    "types": [],
    "declaration": true,
    "isolatedModules": true,
    "isolatedDeclarations": false,
    "erasableSyntaxOnly": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src"]
}
