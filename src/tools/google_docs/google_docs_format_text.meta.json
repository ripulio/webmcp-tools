{
  "$schema": "../../../schemas/toolMetadata.json",
  "id": "google_docs_format_text",
  "description": "Apply text formatting (bold, italic, underline) to the current selection",
  "groupId": "google_docs",
  "filters": [
    {
      "type": "domain",
      "domains": ["docs.google.com"]
    },
    {
      "type": "path",
      "patterns": ["/document/d/[^/]+/edit.*"]
    }
  ]
}
